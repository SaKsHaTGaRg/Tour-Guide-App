<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- White background for the profile picture -->
    <solid android:color="#FFFFFF"/>

    <!-- Subtle border -->
    <stroke
        android:width="2dp"
        android:color="#DDDDDD"/>

    <!-- Optional padding for shadow effect -->
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp"/>

    <!-- Shadow (requires API 21+) -->
    <corners android:radius="60dp"/>
</shape>
