<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="?attr/colorSurfaceVariant">

    <LinearLayout
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgItemHistory"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="12dp"
            android:src="@mipmap/ic_launcher"
            android:contentDescription="History image" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvHistoryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Landmark Title"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSurface" />

            <TextView
                android:id="@+id/tvHistorySnippet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Story preview text goes here..."
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvHistoryMeta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saved: 01.01.2025 12:00"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:layout_marginTop="4dp" />
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>