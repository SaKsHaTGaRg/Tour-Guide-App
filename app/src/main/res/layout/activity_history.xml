<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="?attr/colorSurface"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HistoryActivity">

    <!-- top bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:background="?attr/colorSurface"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/travelmate"
            android:contentDescription="App logo" />

        <TextView
            android:id="@+id/TourGuideApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TourGuideApp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:paddingStart="10dp" />
    </LinearLayout>

    <!-- title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="History"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="16dp"
        android:textColor="?attr/colorOnSurface" />

    <!-- list -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical"
        android:fadeScrollbars="false"
        android:paddingHorizontal="12dp"
        android:clipToPadding="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--CASA LOMA HISTORY-->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/itemCasaLomaHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?attr/colorSurfaceVariant"
                app:strokeColor="?attr/colorOutlineVariant"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="12dp"
                        android:src="@mipmap/ic_launcher"
                        android:contentDescription="Item image" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Casa Loma: History"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="?attr/colorOnSurface"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="In-Depth  |  Date: 05.10.2025"
                            android:textSize="13sp"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageButton
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@android:drawable/ic_media_play"
                            app:tint="?attr/colorOnSurface"
                            android:elevation="2dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Play" />

                        <ImageButton
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@android:drawable/ic_menu_upload"
                            app:tint="?attr/colorOnSurfaceVariant"
                            android:elevation="2dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Share" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- CASA LOMA FOLKLORE -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/itemCasaLomaFolklore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?attr/colorSurfaceVariant"
                app:strokeColor="?attr/colorOutlineVariant"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="12dp"
                        android:src="@mipmap/ic_launcher"
                        android:contentDescription="Item image" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Casa Loma: Folklore"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="?attr/colorOnSurface"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="Short Overview  |  Date: 05.10.2025"
                            android:textSize="13sp"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageButton
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@android:drawable/ic_media_play"
                            app:tint="?attr/colorOnSurface"
                            android:elevation="2dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Play" />

                        <ImageButton
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@android:drawable/ic_menu_upload"
                            app:tint="?attr/colorOnSurfaceVariant"
                            android:elevation="2dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Share" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!--GEORGE BROWN-->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/itemGeorgeBrown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?attr/colorSurfaceVariant"
                app:strokeColor="?attr/colorOutlineVariant"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="12dp"
                        android:src="@mipmap/ic_launcher"
                        android:contentDescription="Item image" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="George Brown College: History"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="?attr/colorOnSurface"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="Standard  |  Date: 05.10.2025"
                            android:textSize="13sp"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageButton
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@android:drawable/ic_media_play"
                            app:tint="?attr/colorOnSurface"
                            android:elevation="2dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Play" />

                        <ImageButton
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@android:drawable/ic_menu_upload"
                            app:tint="?attr/colorOnSurfaceVariant"
                            android:elevation="2dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Share" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!--BIG BEN-->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/itemBigBen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?attr/colorSurfaceVariant"
                app:strokeColor="?attr/colorOutlineVariant"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="12dp"
                        android:src="@mipmap/ic_launcher"
                        android:contentDescription="Item image" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Big Ben: History"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="?attr/colorOnSurface"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="Standard  |  Date: 05.10.2025"
                            android:textSize="13sp"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageButton
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@android:drawable/ic_media_play"
                            app:tint="?attr/colorOnSurface"
                            android:elevation="2dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Play" />

                        <ImageButton
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@android:drawable/ic_menu_upload"
                            app:tint="?attr/colorOnSurfaceVariant"
                            android:elevation="2dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Share" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>

    <!-- bottom nav -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="?attr/colorSurface"
        android:weightSum="4"
        android:elevation="8dp"
        android:paddingHorizontal="8dp"
        android:divider="?android:attr/listDivider"
        android:showDividers="middle">

        <ImageButton
            android:id="@+id/btnProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_profile"
            app:tint="?attr/colorOnSurface"
            android:elevation="2dp"
            android:contentDescription="Profile"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <ImageButton
            android:id="@+id/btnHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_home"
            app:tint="?attr/colorOnSurface"
            android:elevation="2dp"
            android:contentDescription="Home"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <ImageButton
            android:id="@+id/btnReload"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_reload"
            app:tint="?attr/colorOnSurface"
            android:elevation="2dp"
            android:contentDescription="Reload"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_settings"
            app:tint="?attr/colorOnSurface"
            android:elevation="2dp"
            android:contentDescription="Settings"
            android:background="?attr/selectableItemBackgroundBorderless"/>
    </LinearLayout>
</LinearLayout>