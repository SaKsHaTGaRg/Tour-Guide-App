<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?attr/colorSurface">

    <!-- top bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:paddingVertical="12dp"
        android:background="?attr/colorPrimary"
        android:elevation="6dp"
        android:translationZ="6dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/travelmate" />

        <TextView
            android:id="@+id/TourGuideApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TourGuideApp"
            android:textSize="20sp"
            android:paddingStart="10dp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnPrimary"
            android:shadowColor="#66000000"
            android:shadowDx="1"
            android:shadowDy="1.5"
            android:shadowRadius="3" />
    </LinearLayout>

    <!-- image -->
    <ImageView
        android:id="@+id/imgCaptured"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:scaleType="centerCrop"
        android:background="?attr/colorSurfaceVariant"
        android:contentDescription="Captured photo"
        android:elevation="8dp"
        android:translationZ="8dp"
        android:clipToOutline="true" />

    <!-- ai narration -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp"
        android:elevation="10dp">

        <ImageButton
            android:id="@+id/btnNarration"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/circle_button_bg"
            android:src="@drawable/ic_music"
            android:scaleType="centerInside"
            android:elevation="12dp"
            android:translationZ="12dp"
            android:contentDescription="Narrate description" />
    </FrameLayout>

    <!-- text card shaded -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="12dp"
        android:elevation="6dp"
        android:translationZ="6dp"
        android:background="@drawable/card_shadow_bg"
        android:clipToOutline="false"
        android:layout_marginBottom="12dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:fadeScrollbars="false"
            android:fillViewport="true">

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSurface"
                android:lineSpacingExtra="4dp"
                android:shadowColor="#33000000"
                android:shadowDx="1"
                android:shadowDy="2"
                android:shadowRadius="3"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit.
                    Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
                    Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris
                    nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in
                    reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur.
                    Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia
                    deserunt mollit anim id est laborum." />
        </ScrollView>
    </LinearLayout>

    <!-- Back arrow button -->
    <ImageButton
        android:id="@+id/btnBackToNarration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_arrow_back"
        android:background="@null"
        app:tint="?attr/colorPrimary"
        android:elevation="6dp"
        android:contentDescription="Back to narration" />

    <!-- bottom nav bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:weightSum="4"
        android:paddingHorizontal="8dp"
        android:translationZ="8dp">

        <ImageButton
            android:id="@+id/btnProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_profile"
            android:background="@null"
            android:contentDescription="Profile" />

        <ImageButton
            android:id="@+id/btnHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_home"
            android:background="@null"
            android:contentDescription="Home" />

        <ImageButton
            android:id="@+id/btnReload"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_reload"
            android:background="@null"
            android:contentDescription="Reload" />

        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_settings"
            android:background="@null"
            android:contentDescription="Settings" />
    </LinearLayout>

</LinearLayout>